{
    "compilerOptions": {
        "declarationDir": "bin",
        "declaration": true,
        "target": "ES2018",
        "lib": ["DOM", "ScriptHost", "ESNext", "ESNext.Array", "ESNext.AsyncIterable", "ESNext.BigInt", "ESNext.Intl", "ESNext.Promise", "ESNext.String", "ESNext.Symbol"],
        "moduleResolution": "Node",
        "module": "CommonJS",
        "outDir": "bin",
        "allowSyntheticDefaultImports": true,
        "strict": false,
        "esModuleInterop": true,
        "importHelpers": true
    },
    "include": ["./src/**/*.ts"],
    "exclude": [
      "./node_modules/**/*"
      ]
  }